Algoritmo "circulo"

Var
   r, A : real

Inicio
   escreval("Digite o valor do raio do círculo: ")
   escreva("> ")
   leia(r)
   
    A <- pi * Exp(r, 2)
    
   escreval
   escreval("A área do círculo de raio r =", r, " é: ", A:2:3, " unidades de medida ao quadrado.")
    
   

Fimalgoritmo